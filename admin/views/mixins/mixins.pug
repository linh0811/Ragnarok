//- Sidebar
mixin sidebarItem(href, icon, text)
  li.sidebar-item
    a.sidebar-link(href= href)
      ion-icon(name= icon)
      span= text
    .sidebar-animation

//- Filter
mixin filter()
  .filter
    .filter-select 
      select#filter-select
        option(value='all') Tất cả
        option(value='new') Mới nhất
        option(value='sale') Giảm giá
    .filter-search 
      input#filter-search(type='text' placeholder='Nhập từ khoá')
      button.button
        ion-icon(name='search')